{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "trailingComma": "es5",
        "semi": true,
        "jsxSingleQuote": true,
        "singleQuote": true,
        "tabWidth": 2,
        "endOfLine": "auto",
        "max-len": [
          "error",
          {
            "code": 80
          }
        ],
        "indent": [
          "error",
          2
        ],
        "importOrder": [
          "^react(.*)$",
          "<THIRD_PARTY_MODULES>",
          "./types",
          "^[.](?!.*.(scss|css)$).*$",
          "(.*).(scss|css)$"
        ],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true
      }
    ],
    "@typescript-eslint/no-namespace": "off",
    "no-duplicate-imports": "error"
  },
  "globals": {
    "jest": true,
    "describe": true,
    "it": true,
    "expect": true,
    "beforeEach": true
  }
}